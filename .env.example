# PORT — Local HTTP server port used by src/index.ts
PORT=3000

# AWS_ENDPOINT_URL — Optional override for the S3-compatible endpoint (omit to use AWS default)
AWS_ENDPOINT_URL=https://localhost:9000

# AWS_DEFAULT_REGION — Region for the S3 bucket
AWS_DEFAULT_REGION=us-east-1

# AWS_S3_BUCKET_NAME — Bucket name storing cached card images
AWS_S3_BUCKET_NAME=tts-deck-cache

# AWS_ACCESS_KEY_ID — Access key ID with read/write permissions to the cache bucket
AWS_ACCESS_KEY_ID=local-access-key

# AWS_SECRET_ACCESS_KEY — Secret key paired with the access key ID
AWS_SECRET_ACCESS_KEY=local-secret-key

# MERGE_OUTPUT_FORMAT — Output format for the merged grid (png|jpeg)
MERGE_OUTPUT_FORMAT=png

# CACHE_PREFIX — Prefix applied to cached assets inside the bucket
CACHE_PREFIX=cache/

# MAX_IMAGE_BYTES — Maximum allowed size (bytes) for a single source image
MAX_IMAGE_BYTES=10485760

# FETCH_TIMEOUT_MS — Timeout (milliseconds) for upstream image downloads
FETCH_TIMEOUT_MS=15000

# FETCH_CONCURRENCY — Maximum number of concurrent image downloads
FETCH_CONCURRENCY=5
